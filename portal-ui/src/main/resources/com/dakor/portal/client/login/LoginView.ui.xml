<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .loginButton {
            text-align: center;
        }
    </ui:style>

    <g:HTMLPanel width="100%" height="100%">
        <div align="center">
        <table>
            <tr>
                <td>
                    <g:Label text="Username:"/>
                </td>
                <td>
                    <g:TextBox ui:field="userNameTextBox"/>
                </td>
            </tr>
            <tr>
                <td>
                    <g:Label text="Password:"/>
                </td>
                <td>
                    <g:PasswordTextBox ui:field="passwordTextBox"/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <g:Button ui:field="loginButton" text="Login" styleName="{style.loginButton}" width="100%"/>
                </td>
            </tr>
        </table>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>